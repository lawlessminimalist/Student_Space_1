<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Student_Space_1.Views.AlertPage"
             xmlns:local="clr-namespace:Student_Space_1;assembly=Student_Space_1">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=".5*" /><!-- Space 0-->
                <RowDefinition Height="2*" /><!-- Today Title1 -->
                <RowDefinition Height="15*" /><!-- Today Pane 2-->
                <RowDefinition Height="2*" /><!-- ToDo Title 3-->
                <RowDefinition Height="2*" /><!-- Space/ToDoPane 4  -->
                <RowDefinition Height="1.5*" /><!-- Alarms 6 -->
                <RowDefinition Height="15*" /><!-- Alarms 6 -->
                <RowDefinition Height="2*" /><!-- Space 6 -->
                <RowDefinition Height="12*" /><!-- Calendar7-->
                <RowDefinition Height="1*" /> <!-- Space 7 -->




            </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="*"/>


            </Grid.ColumnDefinitions>


            <Label Text="Today" Grid.Row="1" Grid.Column="1" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                   CornerRadius="5"
                   BackgroundColor="Red"
                   Padding="8"
                   WidthRequest="100" Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" >
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />

                    </Grid.RowDefinitions>


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="9*"/>
                    </Grid.ColumnDefinitions>
                    <ImageButton BackgroundColor="Transparent"
                                 RotationY="180"
                                 Grid.Row="0" Grid.Column="0"
                                 Scale="1"
                                 HorizontalOptions="FillAndExpand"
                                 Source="{local:ImageResource Student_Space_1.Images.Plus.png}" />
                    <Label Text="IAB330 Lecture" Grid.Row="0" Grid.Column="1" TextColor="White" ></Label>
                    <ImageButton BackgroundColor="Transparent"
                                 RotationY="180"
                                 Grid.Row="1" Grid.Column="0"
                                 Scale="1"
                                 HorizontalOptions="FillAndExpand"
                                 Source="{local:ImageResource Student_Space_1.Images.Plus.png}" />
                    <Label Text="CAB202 Tute" Grid.Row="1" Grid.Column="1" TextColor="White" ></Label>
                    <ImageButton BackgroundColor="Transparent"
                                 RotationY="180"
                                 Grid.Row="2" Grid.Column="0"
                                 Scale="1"
                                 HorizontalOptions="FillAndExpand"
                                 Source="{local:ImageResource Student_Space_1.Images.Plus.png}" />
                    <Label Text="CAB303 Lecture" Grid.Row="2" Grid.Column="1" TextColor="White" ></Label>
                </Grid>

            </Frame>


            <Label Text="Alarms" Grid.Row="5" Grid.Column="1" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                CornerRadius="5"
                Padding="8"
                WidthRequest="100" Grid.Row="6" Grid.Column="1"
                BackgroundColor="Red">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />

                    </Grid.RowDefinitions>


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="9*"/>
                    </Grid.ColumnDefinitions>
                    <ImageButton BackgroundColor="Transparent"
                                 RotationY="180"
                                 Grid.Row="0" Grid.Column="0"
                                 Scale="1"
                                 HorizontalOptions="FillAndExpand"
                                 Source="{local:ImageResource Student_Space_1.Images.Exit.png}" />
                    <Button Text="Catch Ferry " VerticalOptions="Center" Grid.Row="0" Grid.Column="1" BackgroundColor="Transparent"  HorizontalOptions="Start" Font="Josefin Sans" ></Button>
                    <ImageButton BackgroundColor="Transparent"
                                 RotationY="180"
                                 Grid.Row="1" Grid.Column="0"
                                 Scale="1"
                                 HorizontalOptions="FillAndExpand"
                                 Source="{local:ImageResource Student_Space_1.Images.Exit.png}" />
                    <Button Text="Wake Up" VerticalOptions="Center" Grid.Row="1" Grid.Column="1" BackgroundColor="Transparent" HorizontalOptions="Start" Font="Josefin Sans" Command="{Binding AlarmCommand}" ></Button>


                </Grid>
            </Frame>


            <Label Text="To Do" Grid.Row="3" Grid.Column="3" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                CornerRadius="5"
                Padding="8"
                    WidthRequest="100"
                    Grid.Row="4" Grid.RowSpan="3" Grid.Column="3"
                    BackgroundColor="Red"
>
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />

                    </Grid.RowDefinitions>


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="9*"/>
                    </Grid.ColumnDefinitions>
                    <ImageButton BackgroundColor="Transparent"
                                 RotationY="180"
                                 Grid.Row="0" Grid.Column="0"
                                 Scale="1"
                                 HorizontalOptions="FillAndExpand"
                                 Source="{local:ImageResource Student_Space_1.Images.Plus.png}" />
                    <Label Text="Submit Resume" VerticalOptions="Center" Grid.Row="0" Grid.Column="1" TextColor="White" ></Label>
                    <ImageButton BackgroundColor="Transparent"
                                 RotationY="180"
                                 Grid.Row="1" Grid.Column="0"
                                 Scale="1"
                                 HorizontalOptions="FillAndExpand"
                                 Source="{local:ImageResource Student_Space_1.Images.Plus.png}" />
                    <Label Text="CAB 202 Asssignment 1" VerticalOptions="Center" Grid.Row="1" Grid.Column="1" TextColor="White" ></Label>
                    <ImageButton BackgroundColor="Transparent"
                                 RotationY="180"
                                 Grid.Row="2" Grid.Column="0"
                                 Scale="1"
                                 HorizontalOptions="FillAndExpand"
                                 Source="{local:ImageResource Student_Space_1.Images.Plus.png}" />
                    <Label Text="CAB303 Lecture" VerticalOptions="Center" Grid.Row="2" Grid.Column="1" TextColor="White" ></Label>
                    <ImageButton BackgroundColor="Transparent"
                                 RotationY="180"
                                 Grid.Row="3" Grid.Column="0"
                                 Scale="1"
                                 HorizontalOptions="FillAndExpand"
                                 Source="{local:ImageResource Student_Space_1.Images.Plus.png}" />
                    <Label Text="Code New Life" VerticalOptions="Center" Grid.Row="3" Grid.Column="1" TextColor="White" ></Label>
                </Grid>
            </Frame>

            <Label Text="Calendar" Grid.Row="7" Grid.Column="1" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                CornerRadius="5"
                Padding="8"
                    WidthRequest="100"
                    Grid.Row="8" Grid.RowSpan="1"  Grid.ColumnSpan="3" Grid.Column="1"
                    BackgroundColor="Red">
                <StackLayout>

                </StackLayout>
            </Frame>






        </Grid>
    </ContentPage.Content>
</ContentPage>