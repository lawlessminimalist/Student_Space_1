<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Student_Space_1.Views.AlertPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" /><!-- Space 0-->

                <RowDefinition Height="20" /><!-- Today Title1 -->
                <RowDefinition Height="150" /><!-- Today Pane 2-->
                <RowDefinition Height="20" /><!-- ToDo Title 3-->
                <RowDefinition Height="20" /><!-- Space/ToDoPane 4  -->
                <RowDefinition Height="15" /><!-- Alarms 6 -->
                <RowDefinition Height="150" /><!-- Alarms 6 -->
                <RowDefinition Height="20" /><!-- Space 6 -->
                <RowDefinition Height="120" /><!-- Calendar7-->


            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="150"/>


            </Grid.ColumnDefinitions>


            <Label Text="Today" Grid.Row="1" Grid.Column="1" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                   CornerRadius="5"
                   BackgroundColor="Red"
                   Padding="8"
                   WidthRequest="100" Grid.Row="2" Grid.Column="1" Grid.RowSpan="1" >
                <StackLayout>
                </StackLayout>
            </Frame>


            <Label Text="Alarms" Grid.Row="5" Grid.Column="1" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                CornerRadius="5"
                Padding="8"
                WidthRequest="100" Grid.Row="6" Grid.Column="1"
                BackgroundColor="Red">
                <StackLayout>
                </StackLayout>
            </Frame>


            <Label Text="To Do" Grid.Row="3" Grid.Column="3" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                CornerRadius="5"
                Padding="8"
                    WidthRequest="100"
                    Grid.Row="4" Grid.RowSpan="3" Grid.Column="3"
                    BackgroundColor="Red"
>
                <StackLayout>

                </StackLayout>
            </Frame>

            <Label Text="Calendar" Grid.Row="7" Grid.Column="1" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                CornerRadius="5"
                Padding="8"
                    WidthRequest="100"
                    Grid.Row="8" Grid.RowSpan="1"  Grid.ColumnSpan="3" Grid.Column="1"
                    BackgroundColor="Red">
                <StackLayout>

                </StackLayout>
            </Frame>






        </Grid>
    </ContentPage.Content>
</ContentPage>