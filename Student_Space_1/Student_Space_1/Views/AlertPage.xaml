<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Student_Space_1.Views.AlertPage"
             xmlns:local="clr-namespace:Student_Space_1;assembly=Student_Space_1">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=".5*" /><!-- Space 0-->
                <RowDefinition Height="2*" /><!-- Today Title1 -->
                <RowDefinition Height="15*" /><!-- Today Pane 2-->
                <RowDefinition Height="2*" /><!-- ToDo Title 3-->
                <RowDefinition Height="2*" /><!-- Space/ToDoPane 4  -->
                <RowDefinition Height="1.5*" /><!-- Alarms 6 -->
                <RowDefinition Height="15*" /><!-- Alarms 6 -->
                <RowDefinition Height="2*" /><!-- Space 6 -->
                <RowDefinition Height="12*" /><!-- Calendar7-->


            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="150"/>


            </Grid.ColumnDefinitions>


            <Label Text="Today" Grid.Row="1" Grid.Column="1" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                   CornerRadius="5"
                   BackgroundColor="Red"
                   Padding="8"
                   WidthRequest="100" Grid.Row="2" Grid.Column="1" Grid.RowSpan="1" >
                <StackLayout>
                    <ImageButton BackgroundColor="Black"
                                     Source="{local:ImageResource Student_Space_1.Images.Clock.png}" />
                    <Label Text="IAB330 Lecture" TextColor="White" ></Label>
                    <Label Text="CAB202 Tute" TextColor="White" ></Label>
                    <Label Text="CAB303 Lecture" TextColor="White" ></Label>
                </StackLayout>

            </Frame>


            <Label Text="Alarms" Grid.Row="5" Grid.Column="1" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                CornerRadius="5"
                Padding="8"
                WidthRequest="100" Grid.Row="6" Grid.Column="1"
                BackgroundColor="Red">
                <StackLayout>
                    <Label Text="IAB330 Lecture" TextColor="White" ></Label>
                    <Label Text="CAB202 Tute" TextColor="White" ></Label>
                    <Label Text="CAB303 Lecture" TextColor="White" ></Label>

                </StackLayout>
            </Frame>


            <Label Text="To Do" Grid.Row="3" Grid.Column="3" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                CornerRadius="5"
                Padding="8"
                    WidthRequest="100"
                    Grid.Row="4" Grid.RowSpan="3" Grid.Column="3"
                    BackgroundColor="Red"
>
                <StackLayout>
                    <Label Text="IAB330 Lecture" TextColor="White" ></Label>
                    <Label Text="CAB202 Tute" TextColor="White" ></Label>
                    <Label Text="CAB303 Lecture" TextColor="White" ></Label>

                </StackLayout>
            </Frame>

            <Label Text="Calendar" Grid.Row="7" Grid.Column="1" Grid.RowSpan="1"></Label>
            <Frame BorderColor="Gray"
                CornerRadius="5"
                Padding="8"
                    WidthRequest="100"
                    Grid.Row="8" Grid.RowSpan="1"  Grid.ColumnSpan="3" Grid.Column="1"
                    BackgroundColor="Red">
                <StackLayout>

                </StackLayout>
            </Frame>






        </Grid>
    </ContentPage.Content>
</ContentPage>